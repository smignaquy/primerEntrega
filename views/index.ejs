<!DOCTYPE html>
<html lang="es">
	<%- include('./partials/head') %>
<body>
	<!-- Header -->
	<%- include('./partials/header') %>
	<!-- /Header -->
	
	<!-- Banner -->
	<div class="banner">
		<img src="../images/img_banner.jpeg" alt="Banner de ofertas">
	</div>
	<!-- /Banner -->
	
	<script src="../db/dataCarnes.js"></script>

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Novedades</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<% for (let i = 0; i < info.length; i++){ %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/productos/id/<%= info[i].id %>">
							<figure class="product-box_image">
								<img src="<%= info[i].imagen %>" alt="<%= info[i].nombre %>">
							</figure>
							<article class="product-box_data">
								<h2> <%= info[i].nombre %> </h2>
								<p> <%= info[i].descripcion %> </p>
								<p>Comentarios: 12</p>
							</article>
						</a>
					</section>
				</div>
			<% } %>
		</div>
	</div>
	<!-- /Novedades -->
	<!-- Más comentados -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Más comentados</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<% for (let i = 0; i < info.length; i++){ %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/productos/id/<%= info[i].id %>">
							<figure class="product-box_image">
								<img src=" <%= info[i].imagen %> " alt=" <%= info[i].nombre %> ">
							</figure>
							<article class="product-box_data">
								<h2> <%= info[i].nombre %> </h2>
								<p> <%= info[i].descripcion %> </p>
								<p>Comentarios: 12</p>
							</article>
						</a>
					</section>
				</div>
			<% } %>
		</div>
	</div>
	<!-- /Más comentados -->


	<!-- footer -->
	<%- include('./partials/footer') %>
	<!-- /footer -->
</body>	
</html>